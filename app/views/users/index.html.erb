<div class="main">

  <ul class="users">

    <%@users.each do |user|%>

    <li class="user">
      <%=link_to "/users/#{user.id}", :action => 'go' do%>
      <div class='user-img'>
        <img alt="<%= user.name %>'s photo" src=<%=user.photo%>>
      </div>
      <% end %>

      <div class='user_item'>
        <h2>User <%= user.name %></h2>
        <p class='posts-count'>Number of posts: <%= user.postcounter %></p>
      </div>

    </li>
    <%end%>

  </ul>
</div>